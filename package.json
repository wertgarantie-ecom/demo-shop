{
  "name": "demo-shop",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "prestart": "dotenv -p NODE_ENV dotenv -e ./build/config/${NODE_ENV}.env --debug",
    "start": "node ./build/server.js",
    "build": "rimraf ./build && tsc && npm run copy-files",

    "dev": "NODE_ENV=local npm run load-dotenv && NODE_ENV=local nodemon -L ./src/server.ts",
    "start-local": "NODE_ENV=local npm run load-dotenv && NODE_ENV=local PORT=3002 nodemon ./src/server.ts",
    "start-docker-compose": "NODE_ENV=dockerlocal npm run load-dotenv && NODE_ENV=dockerlocal nodemon ./src/server.ts",
    "load-dotenv": "dotenv -e ./src/${NODE_ENV}.env --debug",
    "copy-files": "copyfiles -u  1 './src/assets/**' './build/' && copyfiles -u  1 './src/config/*.env' './build/'"
  },
  "dependencies": {
    "cookie-parser": "1.4.4",
    "crypto-js": "^4.0.0",
    "dotenv": "8.2.0",
    "dotenv-cli": "^4.0.0",
    "ejs": "3.1.6",
    "express": "4.16.1",
    "express-basic-auth": "^1.2.0",
    "express-healthcheck": "0.1.0",
    "heroku-ssl-redirect": "0.0.4",
    "morgan": "1.9.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/crypto-js": "^4.0.1",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/uuid": "^8.3.0",
    "copyfiles": "^2.4.1",
    "eslint": "^6.3.0",
    "nodemon": "^2.0.7",
    "rimraf": "^2.6.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
